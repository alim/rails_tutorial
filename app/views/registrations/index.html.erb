<div class='row'>
  <div class='columns-12 small'>
    <div class="page-header">

      <h1>Listing Registrations</h1>

      <p>
        This page shows the current list of registered assets.
      </p>

      <br>

      <p id="notice"><%= notice %></p>

    </div>
  </div>
</div>


<div class='row'>
  <div class='small-12 columns'>
    <table width='100%'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Uai</th>
          <th>Bu</th>
          <th>Owner</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @registrations.each do |registration| %>
          <tr>
            <td><%= registration.name %></td>
            <td><%= registration.description %></td>
            <td><%= registration.uai %></td>
            <td><%= registration.bu %></td>
            <td><%= registration.owner %></td>
            <td><%= link_to 'Show', registration %></td>
            <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
            <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<div class='row'>
  <div class='small-12 columns'>

    <%= link_to 'New Registration', new_registration_path, class: 'button radius small' %>

  </div>
</div>
